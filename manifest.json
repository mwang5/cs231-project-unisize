{
	"name": "Unisize",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Adaptive Resizing of Web Pages",
  	"background": { "scripts": ["background.js", "rules.js"] },
	"permissions": [
			"tabs",
			"webRequest",
			"webRequestBlocking",
			"*://*.facebook.com/"
		],

	"page_action": {
		"default_icon": "icon-inactive.png",
		"default_title": "Unisize"
	},
	"content_scripts" : [
		{
			"matches" : [
				// facebook newsfeed only
				"*://facebook.com/",
				"*://facebook.com/?sk=nf",
				"*://facebook.com/home.php*",
				"*://www.facebook.com/",
				"*://www.facebook.com/?sk=nf",
				"*://www.facebook.com/home.php*",
				// (mobile)
				"*://m.facebook.com/",
				"*://m.facebook.com/#!/home.php*",
				"*://m.facebook.com/?_rdr*"
				],
			"js" : ["content.js"],
			"run_at" : "document_idle",
			"all_frames" : false
		}
	]
}
