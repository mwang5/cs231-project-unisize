{
	"name": "Unisize",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Adaptive Resizing of Web Pages",
  	"background": { "scripts": ["background.js", "rules.js"] },
	"permissions": [
			"tabs",
			"*://*.facebook.com/"
		],

	"page_action": {
		"default_icon": "icon-inactive.png",
		"default_title": "Unisize"
	},
	"content_scripts" : [
		{
			"matches" : [
				"*://*.facebook.com/",
				"*://*.facebook.com/?sk=nf"
				],
			"js" : ["content.js", "resize.js"],
			"run_at" : "document_idle",
			"all_frames" : false
		}
	]
}
